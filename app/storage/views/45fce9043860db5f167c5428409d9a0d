<?php if(@is_object($this->seo)): ?>
    <?php $__env->startSection('title'); ?><?php echo $this->seo->title; ?><?php $__env->stopSection(); ?>
    <?php $__env->startSection('description'); ?><?php echo $this->seo->description; ?><?php $__env->stopSection(); ?>
    <?php $__env->startSection('keywords'); ?><?php echo $this->seo->keywords; ?><?php $__env->stopSection(); ?>
<?php else: ?>
    <?php $__env->startSection('title'); ?>
<?php echo e($page->meta->title); ?><?php $__env->stopSection(); ?>
    <?php $__env->startSection('description'); ?><?php $__env->stopSection(); ?>
<?php endif; ?>

<?php $__env->startSection('style'); ?>
    <?php echo HTML::style('css/fotorama.css'); ?>

<?php $__env->stopSection(); ?>


<?php $__env->startSection('content'); ?>
<main1>
    <h1>
        <?php echo @is_object($this->seo) && $this->seo->h1 ? $this->seo->h1 : $page->title; ?>

    </h1>

    <p class="news-date">
        <?php echo date("d/m/Y", strtotime($page->created_at)); ?>

    </p>


    <?php if(@is_object($page->blocks) && $page->blocks->count()): ?>
        <h3>Блоки страницы</h3>
        <hr />
        <div>
            <?php echo Helper::ta_($page->blocks); ?>

            <?php foreach($page->blocks as $block): ?>
                &laquo;<strong><?php echo $block->name; ?></strong>&raquo; [ <i><?php echo $block->slug; ?></i> ]<br/>
                <?php echo $block->content; ?>

            <?php endforeach; ?>
        </div>
        <hr />
    <?php endif; ?>

</main1>
<?php $__env->stopSection(); ?>


<?php $__env->startSection('scripts'); ?>
    <?php echo HTML::script('private/js/vendor/fotorama.js'); ?>

<?php $__env->stopSection(); ?>
<?php echo $__env->make(Helper::layout(), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>