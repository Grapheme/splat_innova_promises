
<?php if(isset($news) && is_object($news) && $news->count()): ?>

    <?php echo Helper::tad_($news); ?>


    <ul class="actions-ul">
        <?php foreach($news as $new): ?>
        <?
        if (@!is_object($new->meta) || !$new->meta->title)
            continue;

        $photo = false;
        if (@is_object($new->meta->photo))
            $photo = $new->meta->photo->thumb();
        $gallery = false;
        if (@is_object($new->meta->gallery) && @is_object($new->meta->gallery->photos) && @count($new->meta->gallery->photos))
            $gallery = $new->meta->gallery->photos;
        ?>
        <li class="actions-li row clearfix">
            <div class="column third">
                <span class="action-img" style="background-image:url(<?php echo $photo; ?>);"></span>
            </div>
            <div class="column two-thirds">
                <h2>
                    <?php echo $new->meta->title; ?>

                </h2>
                <div class="section-desc">
                    <?php if(Config::get('app.locale') == 'ru'): ?>
                        <?php echo Helper::rdate("d M Y", strtotime($new->published_at)); ?>

                    <?php else: ?>
                        <?php echo date("d M Y", strtotime($new->published_at)); ?>

                    <?php endif; ?>
                </div>
                <p>
                    <?php echo $new->meta->preview; ?>

                </p>
            </div>
        </li>
        <?php endforeach; ?>
    </ul>

	<?php /* $news->links() */ ?>

<?php endif; ?>
