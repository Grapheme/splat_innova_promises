<aside id="left-panel">
	<nav>
		<ul>
	<?php foreach(SystemModules::getSidebarModules() as $name => $module): ?>
		<?php if(!Module::where('name', $name)->exists()): ?>
			<?php if(empty($module[2]) || allow::valid_access($module[2])): ?>
				<?php if($module[2] == 'catalogs' && isset($module[3]) && !empty($module[3])): ?>
					<?php foreach($module[3] as $catalog_name => $catalog_module): ?>
						<?php if($catalog_module[2] == 'products'): ?>
							<li<?php echo (Request::segment(3) == $catalog_name)?' class="active"':''; ?>>
								<a href="<?php echo slink::createLink($catalog_name); ?>" title="<?php echo e($catalog_module[0]); ?>">
									<i class="fa fa-lg fa-fw <?php echo $catalog_module[1]; ?>"></i> <span class="menu-item-parent"><?php echo e($catalog_module[0]); ?></span>
								</a>
							</li>
						<?php endif; ?>
					<?php endforeach; ?>
				<?php else: ?>
				<li<?php echo (Request::segment(2) == $name)?' class="active"':''; ?>>
					<a href="<?php echo slink::createLink($name); ?>" title="<?php echo e($module[0]); ?>">
						<i class="fa fa-lg fa-fw <?php echo $module[1]; ?>"></i> <span class="menu-item-parent"><?php echo e($module[0]); ?></span>
					</a>
				</li>
				<?php endif; ?>
			<?php endif; ?>
		<?php endif; ?>
	<?php endforeach; ?>
		</ul>
	</nav>
	<span class="minifyme"> <i class="fa fa-arrow-circle-left hit"></i> </span>
</aside>