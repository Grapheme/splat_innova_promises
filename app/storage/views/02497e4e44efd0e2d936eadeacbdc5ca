<?php $__env->startSection('content'); ?>

    <?php echo $__env->make($module['tpl'].'menu', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>

    <?php if($users->count()): ?>
    <div class="row">
    	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-8">
    		<table class="table table-striped table-bordered">
    			<thead>
    				<tr>
    					<th class="col-lg-1 text-center">ID</th>
    					<th class="col-lg-1 text-center">Аватар</th>
    					<th class="col-lg-9 text-center" style="white-space:nowrap;">Данные пользователя</th>
    					<th class="col-lg-1 text-center">Действия</th>
    				</tr>
    			</thead>
    			<tbody>
    			<?php foreach($users as $user): ?>
    				<tr class="vertical-middle<? if($user->active == 0){ echo ' warning'; } ?>">
    					<td class="text-center"><?php echo $user->id; ?></td>
    					<td class="text-center">
    					<?php if(!empty($user->thumbnail)): ?>
    						<figure class="avatar-container">
    							<img src="<?php echo url($user->thumbnail); ?>" alt="<?php echo $user->name; ?> <?php echo $user->surname; ?>" class="avatar bordered circle">
    						</figure>
                        <?php else: ?>
                            <i class="fa fa-user" style="font-size:36px; color:#999"></i>
    					<?php endif; ?>
    					</td>
    					<td>
    						<?php echo $user->name; ?> <?php echo $user->surname; ?>

                            <?php if($user->email): ?>
                            <br/>
    						<i class="fa fa-envelope-o"></i> <?php echo HTML::mailto($user->email, $user->email); ?>

                            <?php endif; ?>
    					</td>
    					<td class="text-center" style="white-space:nowrap;">

        					<?php if(Allow::action('system', 'users')): ?>
    						<a class="btn btn-success margin-right-10" href="<?php echo action($module['class'].'@getEdit', array('user_id' => $user->id)); ?>">
    							Изменить
    						</a>
        					<?php endif; ?>

        					<?php if(Allow::action('system', 'users')): ?>
    						<form method="POST" action="<?php echo action($module['class'].'@deleteDestroy', array('user_id' => $user->id)); ?>" style="display:inline-block">
    							<button type="submit" class="btn btn-danger remove-user"<? if($user->id == 1){ echo " disabled='disabled'"; }?>>
    								Удалить
    							</button>
    						</form>
        					<?php endif; ?>

    					</td>
    				</tr>
    			<?php endforeach; ?>
    			</tbody>
    		</table>
    	</div>
    </div>
    <?php else: ?>
    <div class="row">
    	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    		<div class="ajax-notifications custom">
    			<div class="alert alert-transparent">
    				<h4>Список пуст</h4>
    				В данном разделе находятся пользователи сайта
    				<p><br><i class="regular-color-light fa fa-th-list fa-3x"></i></p>
    			</div>
    		</div>
    	</div>
    </div>
    <?php endif; ?>
<?php $__env->stopSection(); ?>


