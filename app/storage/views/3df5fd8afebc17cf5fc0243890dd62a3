<?php if(@is_object($news->meta->seo)): ?>
    <?php $__env->startSection('title'); ?><?php echo $news->meta->seo->title; ?><?php $__env->stopSection(); ?>
    <?php $__env->startSection('description'); ?><?php echo $news->meta->seo->description; ?><?php $__env->stopSection(); ?>
    <?php $__env->startSection('keywords'); ?><?php echo $news->meta->seo->keywords; ?><?php $__env->stopSection(); ?>
<?php else: ?>
    <?php $__env->startSection('title'); ?>
<?php echo e($news->meta->title); ?><?php $__env->stopSection(); ?>
    <?php $__env->startSection('description'); ?>
<?php echo e(striptags($news->meta->preview)); ?><?php $__env->stopSection(); ?>
<?php endif; ?>

<?php $__env->startSection('style'); ?>
    <?php echo HTML::style('css/fotorama.css'); ?>

<?php $__env->stopSection(); ?>


<?php $__env->startSection('content'); ?>
<main1>
    <h1>
        <?php echo @is_object($news->meta->seo) && $news->meta->seo->h1 ? $news->meta->seo->h1 : $news->meta->title; ?>

    </h1>

    <p class="news-date">
        <?php echo date("d/m/Y", strtotime($news->published_at)); ?>

    </p>

    <div class="news-desc">
        <h3>Анонс новости</h3>
        <?php echo $news->meta->preview; ?>

    </div>

    <div class="news-desc">
        <h3>Содержание новости</h3>
        <?php echo $news->meta->content; ?>

    </div>

    <hr />

    <?php if(@is_object($news->meta->photo)): ?>
        <h3>Изображение</h3>
        <img src="<?php echo URL::to($news->meta->photo->thumb()); ?>">
    <?php endif; ?>

    <?php if(@is_object($news->meta->gallery) && $news->meta->gallery->photos->count()): ?>
        <h3>Галерея (слайдер)</h3>
        <div class="fotorama" data-nav="false" data-width="100%" data-fit="contain" style="width:300px">
        <?php foreach($news->meta->gallery->photos as $photo): ?>
        <img src="<?php echo URL::to($photo->full()); ?>">
        <?php endforeach; ?>
        </div>
    <?php endif; ?>

</main1>
<?php $__env->stopSection(); ?>


<?php $__env->startSection('scripts'); ?>
    <?php echo HTML::script('private/js/vendor/fotorama.js'); ?>

<?php $__env->stopSection(); ?>
<?php echo $__env->make(Helper::layout(), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>