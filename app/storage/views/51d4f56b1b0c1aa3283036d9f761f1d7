<?
function write_level($hierarchy, $elements, $module, $sortable) {
?>
	<?php if($count = @count($elements)): ?>
        <ol class="dd-list">
        <?php foreach($hierarchy as $h): ?>
            <?
            #Helper::d($h); #continue;
            #if (!isset($h['id']))
            #    continue;
            $element = $elements[$h['id']];
            $line = $element->name;
            $line = preg_replace("~<br[/ ]*?".">~is", ' ', $line);
            $line2 = $element->slug;
            $line2 = preg_replace("~<br[/ ]*?".">~is", ' ', $line2);
            ?>

            <li class="dd-item dd3-item dd-item-fixed-height" data-id="<?php echo $element->id; ?>">
                <?php if($sortable > 0): ?>
                <div class="dd-handle dd3-handle">
                    Drag
                </div>
                <?php endif; ?>
                <div class="dd3-content<?php echo $sortable > 0 ? '' : ' padding-left-15 padding-top-10'; ?> clearfix">

                    <div class="pull-right dicval-actions dicval-main-actions dicval-actions-margin-left">

                        <?php if(Allow::action($module['group'], 'categories_edit')): ?>
                        <a href="<?php echo action('catalog.category.edit', $element->id) . (Request::getQueryString() ? '?' . Request::getQueryString() : ''); ?>" class="btn btn-success dicval-action dicval-actions-edit" title="Редактировать категорию">
                            <!--Изменить-->
                        </a>
                        <?php endif; ?>

                        <?php if(Allow::action($module['group'], 'categories_delete')): ?>
                        <form method="POST" action="<?php echo action('catalog.category.destroy', $element->id); ?>" style="display:inline-block" class="dicval-action dicval-actions-delete" data-products-count="<?php echo @(int)count($element->products); ?>">
                            <button type="button" class="btn btn-danger remove-category-list" title="Удалить категорию">
                                <!--Удалить-->
                            </button>
                        </form>
                        <?php endif; ?>

                    </div>

                    <div class="pull-right dicval-actions">

                        <a href="<?php echo action('catalog.category.index', array('root' => $element->id)) . (Request::getQueryString() ? '?' . Request::getQueryString() : ''); ?>" class="btn btn-warning dicval-action catalog-category-root" title="Вложенная структура категорий">
                            <i class="fa fa-sitemap"></i>
                        </a>

                        <?php if(Allow::action($module['group'], 'products_view')): ?>
                        <a href="<?php echo action('catalog.products.index', array('category' => $element->id)) . (Request::getQueryString() ? '?' . Request::getQueryString() : ''); ?>" class="btn btn-default dicval-action catalog-products-list" title="Товары в категории">
                            <i class="fa fa-cube"></i>
                            <?php echo @(int)count($element->products); ?>

                        </a>
                        <?php endif; ?>

                        <a href="<?php echo action('catalog.attributes.index', array('category' => $element->id)) . (Request::getQueryString() ? '?' . Request::getQueryString() : ''); ?>" class="btn btn-default dicval-action catalog-attributes-list" title="Кол-во &laquo;Групп атрибутов&raquo;/&laquo;Атрибутов&raquo; товаров в категории">
                            <i class="fa fa-puzzle-piece"></i>
                            <?php if(count($element->attributes_groups)): ?>
                                <?php echo count($element->attributes_groups); ?> /
                                <?php echo $element->attributes_count; ?>

                            <?php endif; ?>
                        </a>

                    </div>

                    <div class="dicval-lines">
                        <?php echo $line; ?>

                        <br/>
                        <span class="note dicval_note">
                            <?php echo $line2; ?>

                        </span>
                    </div>


                </div>
                <?php if(isset($h['children']) && is_array($h['children']) && count($h['children'])): ?>
                    <?
                    /**
                     * Вывод дочерних элементов
                     */
                    write_level($h['children'], $elements, $module, $sortable);
                    #Helper::dd($h['children']);
                    ?>
                <?php endif; ?>
            </li>
        <?php endforeach; ?>

        </ol>

    <?php endif; ?>
<?
}
?>




<?php $__env->startSection('content'); ?>

    <?php echo $__env->make($module['tpl'].'/menu', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>


	<?php if($count = @count($elements)): ?>

        <div class="settings settings-root hidden"><?php echo (int)Input::get('root'); ?></div>

        <div class="dd dicval-list" data-output="#nestable-output">
            <?
            write_level($hierarchy, $elements, $module, $sortable);
            ?>
        </div>

        <div class="clear"></div>

	<?php else: ?>

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="ajax-notifications custom">
                    <div class="alert alert-transparent">
                        <h4>Список пуст</h4>
                        <p><br><i class="regular-color-light fa fa-th-list fa-3x"></i></p>
                    </div>
                </div>
            </div>
        </div>

	<?php endif; ?>

    <div class="clear"></div>

<?php $__env->stopSection(); ?>


<?php $__env->startSection('scripts'); ?>
    <script>
    var essence = 'record';
    var essence_name = 'запись';
	var validation_rules = {
		name: { required: true }
	};
	var validation_messages = {
		name: { required: 'Укажите название' }
	};
    </script>

	<script type="text/javascript">
		if(typeof pageSetUp === 'function'){pageSetUp();}
		if(typeof runFormValidation === 'function'){
			loadScript("<?php echo asset('private/js/vendor/jquery-form.min.js');; ?>", runFormValidation);
		}else{
			loadScript("<?php echo asset('private/js/vendor/jquery-form.min.js');; ?>");
		}
	</script>

    <?php if(@trim($dic_settings['javascript'])): ?>
    <script>
        <?php echo @$dic_settings['javascript']; ?>

    </script>
    <?php endif; ?>

    <?php if($sortable): ?>
    <script>
    $(document).ready(function() {

        var updateOutput = function(e) {

            show_hide_delete_buttons();

            var list = e.length ? e : $(e.target), output = $(list.data('output'));
            if (window.JSON) {
                var data = window.JSON.stringify(list.nestable('serialize'));
                var root = $('.settings.settings-root').text() || 0;
                //console.log(root);
                //return;
                $.ajax({
                    url: "<?php echo URL::route('catalog.category.nestedsetmodel'); ?>",
                    type: "post",
                    data: { data: data, root: root },
                    success: function(jhr) {
                        //console.clear();
                        //console.log(jhr);
                    }
                });
                output.val(data);
            } else {
                output.val('JSON browser support required for this demo.');
            }
        };

        //updateOutput($('.dd.dicval-list').data('output', $('#nestable-output')));

        $('.dd.dicval-list').nestable({
            maxDepth: <?php echo (int)$sortable; ?>,
            group: 1
        }).on('change', updateOutput);

        function show_hide_delete_buttons() {
            /*
            $('.dd-item > button:first-child').parent().find('.dd3-content:first .dicval-actions .dicval-actions-delete').hide();
            $('.dd-item > div:first-child').parent().find('.dd3-content:first .dicval-actions .dicval-actions-delete').show();
            */

            $('.dd-item > button:first-child').parent().find('.dd3-content:first .dicval-actions .dicval-actions-delete').attr('data-can-delete', '0');
            $('.dd-item > div:first-child').parent().find('.dd3-content:first .dicval-actions .dicval-actions-delete').attr('data-can-delete', '1');

            $('.dd-item > button:first-child').parent().find('.dd3-content:first .dicval-actions .catalog-category-root').show();
            $('.dd-item > div:first-child').parent().find('.dd3-content:first .dicval-actions .catalog-category-root').hide();
            //*/
        }

        show_hide_delete_buttons();

    });
    </script>
    <?php endif; ?>

<?php $__env->stopSection(); ?>


<?php echo $__env->make(Helper::acclayout(), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>