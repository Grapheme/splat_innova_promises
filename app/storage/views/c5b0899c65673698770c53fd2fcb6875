
<?
$name = $block->id ? 'blocks' : 'blocks_new';
$class = $block->id ? '' : ' unsaved';
$id = $block->id ? $block->id : '%i%';
?>
<div class="block clearfix<?php echo $class; ?>" data-block_id="<?php echo $block->id; ?>">
    <input type="text" name="<?php echo $name; ?>[<?php echo $id; ?>][name]" value="<?php echo $block->name; ?>" placeholder="Название блока" class="block_name">
    <input type="text" name="<?php echo $name; ?>[<?php echo $id; ?>][slug]" value="<?php echo $block->slug; ?>" placeholder="Системное имя" class="block_desc">
    <input type="hidden" name="<?php echo $name; ?>[<?php echo $id; ?>][order]" value="<?php echo is_int($block->order) ? $block->order : '%p%'; ?>" class="block_order">
    <a href="javascript:void(0)" class="remove_block"><i class="fa fa-trash-o"></i> удалить</a>
    <?php if($block->id): ?>
    <a href="javascript:void(0)" class="edit_block" data-id="<?php echo $block->id; ?>"><i class="fa fa-pencil"></i> править</a>
    <?php endif; ?>
</div>
