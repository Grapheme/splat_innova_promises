extends layout

block vars
	- var bodyClass = "index-page"

block content
	.promise-make.js-type-parent
		.wrapper
			.title Новое обещание
			.profile-card
				.profile-photo(style="background-image: url(http://img0.liveinternet.ru/images/attach/c/6/102/827/102827412_1346919545_0107400x320.jpg);")
				.profile-info
					.info-cont
						.name
							span Кирилл Черенков
						.age 28 лет
			.promise-form
				form
					.input-cont.input-advice-cont
						.make-promise-placeholder.js-promise-placeholder
							.promise-placeholder Я ОБЕЩАЮ <span>...</span>
							textarea.js-advice-to
							.promises-advice
								span Например:
								a.js-advice(href="#") Бросить курить
								a.js-advice(href="#") Похудеть на 5 килогармм
								a.js-advice(href="#") Навестить родителей
								a.js-advice(href="#") Выйти замуж
								a.js-advice(href="#") Спеть в трамвае
								a.js-advice(href="#") Завести щенка
					.time-inputs
						.desc Я выполню обещание к
						.input-cont
							.input-div.time-div
								input.time-input.input-class.js-mask-time
							span.bet-text часам
							.input-div.date-div
								input.date-input.input-class.js-future-date
					.color-inputs
						.desc Выберите оформление
						select.js-type-select.hidden
							option(value="blue")
							option(value="yellow")
							option(value="aqua")
							option(value="pink")
							option(value="green")
						ul.color-select.js-types
							li.color-item.type-blue(data-type="blue")
							li.color-item.type-yellow(data-type="yellow")
							li.color-item.type-aqua(data-type="aqua")
							li.color-item.type-pink(data-type="pink")
							li.color-item.type-green(data-type="green")
						.check-cont
							input(type="checkbox" id="apply").styledCheck
							label(for="apply") <span class="check-fake"><i class="fi icon-check"></i></span> Сделать обещание видимым только мне
						.btn-cont
							button.us-btn Дать обещание
	.promo-block
		.wrapper
			.logo
			.text Каждый раз, выполняя обещания, вы становитесь чуточку лучше. Мы тоже хотим вам пообещать <a href="#">кое-что</a>

block scripts
	script.
		SplatSite.Promise();
